<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kt.aivle.clnt_co.mapper.ClntCoMapper">

  <sql id="clntCoList">
    <if test='keyword != null and keyword != ""'>
      <if test='searchType != null and searchType == 1'>
        AND clnt_nm LIKE CONCAT('%',#{keyword},'%')
      </if>
      <if test='searchType != null and searchType == 2'>
        AND addr LIKE CONCAT('%',#{keyword},'%')
      </if>
      <if test='searchType != null and searchType == 2'>
        AND telno LIKE CONCAT('%',#{keyword},'%')
      </if>
      <if test='searchType != null and searchType == 2'>
        AND fxno LIKE CONCAT('%',#{keyword},'%')
      </if>
    </if>
    <if test='dealYn == 1'>
      AND deal_yn LIKE = 'Y'
    </if>
    <if test='dealYn == 2'>
      AND deal_yn LIKE = 'N'
    </if>
  </sql>



  <!-- 의뢰사등록 -->
  <insert
    id="regTest"
    parameterType="kt.aivle.clnt_co.model.TestRequest"
  >
    /* kt.aivle.clnt_co.ClntCoMapper.regTest*/
    INSERT INTO employee
    (
     employee_id
      , employee_name
      , gender
      , phone
      , email
      , hire_date
    )
    VALUES (
    #{employeeId}
    , #{employeeName}
    , #{gender}
    , #{phone}
    , #{email}
    , NOW()
    );
  </insert>
</mapper>